{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <section class="py-5 text-center container-fluid">
        <div class="col-lg-3 col-md8 mx-auto">
            <h1 class="fw-light">{{ user }}<h1>
                    <p class="lead text-muted fs-4">
                        Welkom op de beheerderspagina!
                    {{ description }}
        </div>
    </section>

    <table class="table">
        <thead>
        <tr>
        <th class="bg-custom">
            dieren
        </th>
        <th class="bg-custom">
            beschrijving
        </th>
        </tr>
        </thead>
        <tbody>
        {% for beschrijving in description %}
        <tr>
            <td>
                {{ beschrijving.name }}
            </td>
            <td>
                {{ beschrijving.description }}
            </td>
            <td>
                <a href="{{ path('delete', {id:beschrijving.id}) }}">verwijder</a>
            </td>
        </tr>
        {% endfor %}


        </tbody>
    </table>
    <button class="btn btn-primary">
        <a href="{{ path('app_add') }}">toevoegen</a>
    </button>

{% endblock %}
